{
  "name": "guess-the-sentence-game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:production": "node test-production.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "security:audit": "./security-audit.sh",
    "security:deps": "npm audit && cd worker && npm audit",
    "security:fix": "npm audit fix && cd worker && npm audit fix",
    "deploy": "./security-audit.sh && ./deploy-production.sh",
    "deploy:worker": "cd worker && node deploy-production.js",
    "setup:monitoring": "echo 'See monitoring-setup.md for configuration instructions'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.1.0",
    "vitest": "^1.2.0"
  }
}